<div class="home-banner">
  <h1>Make your cocktail great again</h1>
<%= link_to "Create your own cocktail", new_cocktail_path, class: "btn btn-success" %>
</div>

<div class="row">
  <% @cocktails.each do |cocktail|  %>
  <div class="col-3">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill if cocktail.photo.present? %>')">
        <%= link_to cocktail.name, cocktail_path(cocktail)  %>
      </div>

  </div>
  <% end %>

</div>
